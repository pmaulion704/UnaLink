{
  "manifest_version": 2,

  "name": "UnaLink",
  "description": "UnaLink is a Chrome Extension that enables you to easily access URLs without switching tabs.",
  "version": "0.1",
  "browser_action": {
    "default_icon": "images/icon_16.png",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "contextMenus"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "icons": {
    "128": "images/icon_128.png",
    "48": "images/icon_48.png",
    "16": "images/icon_16.png"
  }
}